<?xml version="1.0"?>

<robot name="puntar"
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
    xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

    <!-- Included URDF Files -->
    <include filename="$(find p2os_description)/urdf/pioneer3dx/pioneer3dx.xacro" />          <!-- Pioneer base -->
    <include filename="$(find ptu46_description)/urdf/ptu46.xacro" />                         <!-- PTU -->
    <include filename="$(find kinect_description)/urdf/kinect.urdf.xacro" />                  <!-- Kinect -->
    <include filename="$(find tower_description)/urdf/tower.urdf.xacro" />                    <!-- Tower -->
    
    <!-- PIONEER 3DX BASE -->
    <pioneer3dx />
    
    <!-- TOWER ATTACHEMENT-->
    <tower name="tower" parent="top_plate">
        <origin xyz="0.148 0.0 0.0" rpy="0 0 0" />                                            <!-- Measurement made with ruler -->
    </tower>
        
    <!-- PTU ATTACHMENT -->
    <ptu46 name="ptu" parent="tower_top_link">
        <origin xyz="-0.1 0.0127254 0.0" rpy="0 0 0" />                                        <!-- Measurement made with ruler -->
    </ptu46>
    
    <!-- KINECT ATTACHEMENT -->
    <kinect name="kinect" parent="ptu_tilt_link"/>
    
</robot>
