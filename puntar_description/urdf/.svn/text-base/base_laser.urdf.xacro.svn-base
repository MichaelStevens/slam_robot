<?xml version="1.0"?>

<robot name="puntar"
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
    xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

    <!-- Included URDF Files -->
    <include filename="$(find p2os_description)/urdf/pioneer3dx/pioneer3dx.xacro" />          <!-- Pioneer base -->
    <include filename="$(find puntar_description)/urdf/erratic_hokuyo_laser.xacro" />         <!-- Erratic laser -->
        
    <!-- PIONEER 3DX BASE -->
    <pioneer3dx />
    
    <!-- HOKUYO LASER ATTACHMENT -->
    <erratic_hokuyo_laser parent="top_plate">
        <origin xyz="0.17 0.0 0.0" rpy="0 0 0" />                                             <!-- Measurement selected visually from the 3D model -->
    </erratic_hokuyo_laser>
        
</robot>
